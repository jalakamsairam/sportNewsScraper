<div class = "panel panel-info">
    <div class="panel-heading">
        <h3>
            <a class="article-link" target="_blank" href="{{this.link}}" >{{title}} </a>
            <button class="btn btn-primary classSaved" data-toggle="modal" data-target="#noteModal" id="{{id}}">make note</button>
            <a class ="btn btn-danger delete">Unsave Article</a>
        </h3>
    </div>
    <div class="panel-body">
        {{title}}
    </div>
    <div class = "modal fade" id = "noteModal" tabindex="-1" role = "dialog" aria-labelledby="noteModal" area-hidden = "true">
        <div class = "modal-dialog">
            <div class = "modal-content">
                
                <div class = "modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class = "modal-title" id="myModalLabel">Note</h4>
                </div>
                <div class = "modal-body">
                    <div class = "form-group">
                <form role="form" id = "modalForm">
                  <div class="form-group">
                    <label for="title">title</label>
                      <textarea class="form-control"
                      id="title" rows = "1" placeholder="enter the title here" required></textarea>
                  </div>
                  <div class="form-group">
                    <label for="note">note</label>
                      <textarea class="form-control" rows="10" id="note" placeholder="enter the text here" required></textarea>
                  </div>
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <input type="submit" class="btn btn-success saveNote" value = "save"/>
                </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
